<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Top.Toolbar.Style</item>
    </style>

    <!-- Top toolbar -->
    <style name="Top.Toolbar.Style" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorAccent</item>
        <item name="titleTextAppearance">@style/Top.Toolbar.Text</item>
    </style>

    <style name="Top.Toolbar.Text" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Navigation_tasklist -->
    <style name="Toolbar.BottomNavigation" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- https://stackoverflow.com/questions/54761919/how-to-make-a-custom-alertdialog-fullscreen -->
    <!-- https://stackoverflow.com/questions/18536439/dialogfragment-fullscreen-shows-padding-on-sides -->
    <style name="EditDialog" parent="android:Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ToggleButton">
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">0sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
    </style>
</resources>
