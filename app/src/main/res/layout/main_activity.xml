<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/topBar"
        layout="@layout/main_topbar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/dateGroupRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dateGroupRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#D6D6D6"
        android:paddingTop="2dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/addTaskBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar" />

    <include
        android:id="@+id/addTaskBar"
        layout="@layout/main_bottombar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateGroupRV" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#727272"
        android:visibility="visible"
        app:itemIconSize="24dp"
        app:itemIconTint="@android:color/background_light"
        app:itemTextAppearance="@style/Toolbar.BottomNavigation"
        app:itemTextAppearanceActive="@style/Toolbar.BottomNavigation"
        app:itemTextAppearanceInactive="@style/Toolbar.BottomNavigation"
        app:itemTextColor="#FFFFFF"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dateGroupRV"
        app:layout_constraintTop_toBottomOf="@+id/addTaskBar"
        app:menu="@menu/main_bottombar_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>